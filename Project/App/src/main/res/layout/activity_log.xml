<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin">

    <TextView
            android:id="@+id/textView_acceleration_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="Acceleration X" />
    <TextView
            android:id="@+id/textView_acceleration_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_acceleration_x"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="Acceleration Y" />
    <TextView
            android:id="@+id/textView_acceleration_z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_acceleration_y"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="Acceleration Z" />

    <TextView
            android:id="@+id/textView_rotation_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_acceleration_z"
            android:layout_marginTop="24dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="Rotation X"/>
    <TextView
            android:id="@+id/textView_rotation_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_rotation_x"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="Rotation Y"/>
    <TextView
            android:id="@+id/textView_rotation_z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_rotation_y"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="Rotation Z"/>

    <TextView
            android:id="@+id/textView_gps_latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_rotation_z"
            android:layout_marginTop="24dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="Latitude"/>
    <TextView
            android:id="@+id/textView_gps_longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_gps_latitude"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="Latitude"/>

</RelativeLayout>